<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget42"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
	android:id="@+id/buy_productlist_title_layout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true">

<TextView
    android:id="@+id/buy_productlist_title_txtview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="产品列表" />

<Button
	android:id="@+id/buy_productlist_pickup_btn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="&#25910;&#34255;&#22841;"
	android:layout_alignParentTop="true"
	android:layout_alignParentRight="true" />
<Button
	android:id="@+id/buy_productlist_back_btn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="&#36820;&#22238;"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/buy_productlist_search_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/buy_productlist_title_layout" >

<Button
	android:id="@+id/buy_productlist_search_btn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="&#25628;&#32034;"
	android:layout_alignParentTop="true"
	android:layout_alignParentRight="true" />
<EditText
	android:id="@+id/buy_productlist_search_edittxt"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:hint="&#20135;&#21697;&#21517;&#31216;"
	android:textSize="18sp"
	android:layout_alignParentTop="true"
	android:layout_centerHorizontal="true" />
</RelativeLayout>

<LinearLayout
    android:id="@+id/buy_productlist_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/buy_productlist_search_layout"
    android:orientation="vertical"
    android:visibility="visible" >

    <ListView
        android:id="@+id/buy_productlist_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    </ListView>
</LinearLayout>

</RelativeLayout>
