<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_title_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/left_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/buy_payway_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_order_back_btn"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:id="@+id/b_linearLayout"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/left_linearLayout"
            android:layout_marginLeft="15dp"
            android:background="@drawable/order_title_bg2" />

        <TextView
            android:id="@+id/buy_payway_title_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="支付方式"
            android:textColor="#fcff00"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/score_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/TextView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用消费积分"
                    android:textColor="#797979"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_score_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(使用积分："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_score_select_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3434"
                    android:textColor="#00a5d4"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_score2_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="剩余积分："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_score2_select_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3434)"
                    android:textColor="#00a5d4"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/money_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/TextView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用帐号余额"
                    android:textColor="#797979"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/TextView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(使用余额："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_money_select_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3434"
                    android:textColor="#00a5d4"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/TextView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="剩余账户："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/GetAccountBalanceResultBean_money2_select_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="3434)"
                    android:textColor="#00a5d4"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/coupon_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_notemough_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/coupon_checkbox"
                android:layout_alignBottom="@+id/coupon_checkbox"
                android:layout_toRightOf="@+id/coupon_checkbox"
                android:text="使用优惠券"
                android:textColor="#797979"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/coupon_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_toRightOf="@+id/order_notemough_txtview" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/buy_payway_orderform_id_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付金额："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/totalprice_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfdfdfds"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/buy_payway_orderform_producttotalprice_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分抵扣："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/use_score_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/buy_payway_orderform_deliverprice_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额抵扣："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/use_money_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/buy_payway_orderform_deliverprice_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应获点数："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/get_score_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/buy_payway_orderform_totalintegrate_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券抵扣："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/use_coupon_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/buy_payway_orderform_deliverprice_title_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余点数："
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/balance_score_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ce3000"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_payway_orderform_totalintegrate_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付金额："
                android:textColor="#ce3000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/now_price_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#ce3000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/buy_payway_orderform_totalintegrate_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实获点数："
                android:textColor="#0a9a5b"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/now_score_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#0a9a5b"
                android:textSize="18dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
                android:text="支付方式：" />

            <CheckBox
                android:id="@+id/buy_payway_ishelppay1_checkbox"
                   android:layout_toRightOf="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委托代扣" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buy_payway_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

</LinearLayout>