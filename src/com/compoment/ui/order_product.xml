<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/buy_product_title_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="产品信息" />

        <Button
            android:id="@+id/buy_product_pickup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="收藏夹" />

        <Button
            android:id="@+id/buy_product_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="返回" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/buy_product_smallpic_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"
            android:src="@drawable/bg_account_user_address" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/buy_product_smallpic_imgview"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buy_product_decrement_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="数量减一" />

                <EditText
                    android:id="@+id/buy_product_num_edittxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <Button
                    android:id="@+id/buy_product_increase_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="数量加一" />

            </RelativeLayout>

            <Button
                android:id="@+id/buy_product_buynow_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="立即购买" />

            <Button
                android:id="@+id/buy_product_buycar_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="加入购物车" />

            <Button
                android:id="@+id/buy_product_addpickup_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="加入收藏夹" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_product_name_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名字：" />

            <TextView
                android:id="@+id/buy_product_stock_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存量" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_product_stype_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品规格：" />

            <TextView
                android:id="@+id/buy_product_stype_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10片/瓶" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_product_discoutprice_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠价：" />

            <TextView
                android:id="@+id/buy_product_discoutprice_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2222" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/buy_product_integrate_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品点数：" />

            <TextView
                android:id="@+id/buy_product_integrate_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4444" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_product_info_title_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品简介：" />

            <TextView
                android:id="@+id/buy_product_info_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好好吃" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
