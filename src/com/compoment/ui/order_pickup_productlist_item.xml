<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget34"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e7f8c2"
    android:orientation="horizontal">"
    
    <RelativeLayout
        android:id="@+id/buy_shoppingcar_productlist_item_check_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
      >

        <CheckBox
            android:id="@+id/buy_shoppingcar_productlist_item_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        
        </RelativeLayout >


<LinearLayout 
    android:id="@+id/widget34"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e7f8c2"
    android:orientation="vertical" >

    
    
    
    <RelativeLayout
        android:id="@+id/widget34"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/buy_pickup_productlist_item_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#fff" >

            <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/order_pickup_chu"
            />
            <ImageView
                android:id="@+id/buy_pickup_productlist_item_productpic_imgview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bg_account_user_address" />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy_pickup_productlist_item_productmsg_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/buy_pickup_productlist_item_img_layout" >

            <RelativeLayout
                android:id="@+id/buy_pickup_productlist_item_productname_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/buy_pickup_productlist_item_productname_txtview"
                    android:layout_width="73dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="产品名字"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buy_pickup_productlist_item_productstype_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/buy_pickup_productlist_item_productname_layout" >

                <TextView
                    android:id="@+id/buy_pickup_productlist_item_productstype_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="产品规格"
                    android:textColor="#797979"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buy_pickup_productlist_item_productprice_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buy_pickup_productlist_item_productstype_layout" >

                <TextView
                    android:id="@+id/buy_pickup_productlist_item_productintegrate_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="产品点数"
                    android:textColor="#0a9a5b"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/buy_pickup_productlist_item_productprice_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="产品价格"
                    android:textColor="#ce3000"
                    android:textSize="17dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_pickup_productlist_item_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

       

            <Button
                android:id="@+id/buy_pickup_productlist_item_buycar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/order_pickup_buycar_left_btn_sl"
                android:background="@drawable/order_pickup_buycar_btn_sl"
                android:text="加入购物车" />
       

     

            <Button
                android:id="@+id/buy_pickup_productlist_item_pickupcancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/order_pickup_pickupcancel_left_btn_sl"
                android:background="@drawable/order_pickup_buycar_btn_sl"
                android:text="取消收藏" />
       
    </RelativeLayout>

</LinearLayout>
</LinearLayout>