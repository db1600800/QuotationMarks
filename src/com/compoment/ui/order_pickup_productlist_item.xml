<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget34"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/buy_pickup_productlist_item_img_layout"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/buy_pickup_productlist_item_productpic_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/bg_account_user_address" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_pickup_productlist_item_productmsg_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/buy_pickup_productlist_item_btn_layout"
        android:layout_toRightOf="@+id/buy_pickup_productlist_item_img_layout" >

        <RelativeLayout
            android:id="@+id/buy_pickup_productlist_item_productname_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/buy_pickup_productlist_item_productname_txtview"
                android:layout_width="73dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="产品名字" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy_pickup_productlist_item_productstype_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/buy_pickup_productlist_item_productname_layout" >

            <TextView
                android:id="@+id/buy_pickup_productlist_item_productstype_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="产品规格" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy_pickup_productlist_item_productprice_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_pickup_productlist_item_productstype_layout" >

            <TextView
                android:id="@+id/buy_pickup_productlist_item_productintegrate_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="产品点数" />

            <TextView
                android:id="@+id/buy_pickup_productlist_item_productprice_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="产品价格" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buy_pickup_productlist_item_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false" >

        <Button
            android:id="@+id/buy_pickup_productlist_item_buycar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="购物车" />

        <Button
            android:id="@+id/buy_pickup_productlist_item_pickupcancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_pickup_productlist_item_buycar_btn"
            android:layout_centerHorizontal="true"
            android:text="取消" />
    </RelativeLayout>

</RelativeLayout>