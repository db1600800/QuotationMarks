<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >
    

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

 
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/Deliver_Name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称:" />

                <TextView
                    android:id="@+id/Deliver_Name_select_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Deliver_Name_textview" />
            </RelativeLayout>
        </LinearLayout>

     
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Deliver_DeliverAddress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:" />

            <TextView
                android:id="@+id/Deliver_DeliverAddress_select_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Deliver_DeliverAddress_textview" />
        </RelativeLayout>
        
           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/Deliver_Phone_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="固话:" />

                <TextView
                    android:id="@+id/Deliver_Phone_select_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Deliver_Phone_textview" />
            </RelativeLayout>
        </LinearLayout>
        

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Deliver_AuthorCode_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/order_more_address_jump_textview"
                android:text="" />

     

            <Button
                android:id="@+id/order_more_address_jump_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="更多地址" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>