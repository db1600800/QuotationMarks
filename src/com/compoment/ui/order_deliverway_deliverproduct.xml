<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promotion_product_form_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/order_notemough_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随货配送" />

    <LinearLayout
        android:id="@+id/promotion_product_form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/buy_deliverway_isselect_address_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/PromotionDeliverOrderProduct_ProductId_select_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_deliverway_isselect_address_checkbox"
            android:layout_weight="1"
            android:text="产品编码" />

        <TextView
            android:id="@+id/PromotionDeliverOrderProduct_ProductName_select_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/PromotionDeliverOrderProduct_ProductId_select_textview"
            android:layout_weight="1"
            android:text="产品名称" />

        <TextView
            android:id="@+id/PromotionDeliverOrderProduct_BuyNumber_select_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/PromotionDeliverOrderProduct_ProductName_select_textview"
            android:layout_weight="1"
            android:text="数量" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PromotionDeliverOrderProduct_isDeliverProduct_select_form_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical">"
    </LinearLayout>

</LinearLayout>