<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget42"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_bg" >

    <RelativeLayout
        android:id="@+id/buy_pickup_productlist_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/order_title_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/buy_pickup_productlist_title_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="产品目录"
            android:textColor="#fcff00"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/buy_pickup_productlist_title_num_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_pickup_productlist_title_txtview"
            android:layout_centerVertical="true"
            android:text="(6)"
            android:textSize="20dp"
            android:textColor="#fcff00" />

        <LinearLayout
            android:id="@+id/right_linearLayout"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="5dp" 
            android:visibility="gone"
             >

            <Button
                android:id="@+id/buy_pickup_productlist_pickup_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_order_pickup_btn"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/a_linearLayout"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/right_linearLayout"
            android:layout_marginRight="15dp"
            android:background="@drawable/order_title_bg2" />

        <LinearLayout
            android:id="@+id/left_linearLayout"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:padding="5dp" >

            <Button
                android:id="@+id/buy_pickup_productlist_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_order_back_btn" />
        </LinearLayout>

        <ImageView
            android:id="@+id/b_linearLayout"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/left_linearLayout"
            android:layout_marginLeft="15dp"
            android:background="@drawable/order_title_bg2" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buy_pickup_productlist_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buy_pickup_productlist_title_layout"
        android:orientation="vertical"
        android:visibility="visible" >

        <ListView
            android:id="@+id/buy_pickup_productlist_gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000" >
        </ListView>
    </LinearLayout>
    
    
    <LinearLayout
    android:id="@+id/buy_shoppingcar_productlist_totaloperate_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" >

    <CheckBox
        android:id="@+id/buy_shoppingcar_productlist_totaloperate_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ProductShoppingcarStoreUp_ProductId_isStoreUp_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消收藏" />

   

</LinearLayout>

</RelativeLayout>