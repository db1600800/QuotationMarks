<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<!-- //行1 -->
	<RelativeLayout android:id="@+id/stock_mystock_kline_relativeLayout_top"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<Button android:layout_width="wrap_content"
			android:id="@+id/stock_mystock_kline_kline_btn_back"
			android:layout_alignParentTop="true" android:text=""
			android:layout_height="wrap_content" android:background="@drawable/stock_shangzhenindex_btn_back"
			android:layout_alignParentLeft="true"></Button>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/stock_mystock_kline_linearLayout_chosetitle"
			android:layout_centerInParent="true" android:orientation="horizontal" android:clickable="true">
			<TextView android:layout_width="wrap_content" android:text="我的自选"
				 android:layout_height="wrap_content" android:textSize="15sp"
				android:id="@+id/stock_mystock_kline_txt_chosetitle"></TextView>

			<ImageView android:layout_height="wrap_content" android:id="@+id/imageView1"
				android:src="@drawable/stock_mystock_btn_point_hit" android:layout_width="wrap_content">
		    </ImageView>
		    
		</LinearLayout>

		<Button android:layout_width="wrap_content"
			android:id="@+id/stock_mystock_kline_btn_refresh"
			android:layout_alignParentRight="true" android:text=""
			android:layout_height="wrap_content" android:background="@drawable/stock_shangzhenindex_btn_refresh"></Button>
	</RelativeLayout>

	<!-- //行2 -->
	<LinearLayout android:id="@+id/stock_mystock_kline_relativeLayout_body"
		android:layout_below="@+id/stock_mystock_kline_relativeLayout_top"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_above="@+id/stock_mystock_kline_relativeLayout_bottom">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/stock_mystock_kline_relativeLayout_21">
			<TextView android:layout_width="wrap_content" android:text="上证指数"
				android:layout_height="wrap_content" android:id="@+id/stock_mystock_kline_txt_title"></TextView>

		</LinearLayout>


		<!-- 日 kline 行22 -->
		<LinearLayout android:layout_width="fill_parent" android:layout_margin="3dip"
			android:layout_height="120dip" android:layout_alignParentLeft="true"
			android:id="@+id/stock_mystock_kline_LinearLayout_klinepain"
			android:layout_above="@+id/stock_mystock_kline_listview_scroll"
			android:layout_below="@+id/stock_mystock_kline_relativeLayout_21"></LinearLayout>

		<!--行23 -->

		<ScrollView android:layout_width="fill_parent" 
			android:layout_height="fill_parent" 
			android:id="@+id/stock_mystock_kline_listview_scroll">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:gravity="center"
				android:id="@+id/stock_mystock_kline_listview">


			</LinearLayout>
		</ScrollView>
	</LinearLayout>
	
	

	<!-- //行3 -->
	<RelativeLayout android:id="@+id/stock_mystock_kline_relativeLayout_bottom"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_alignParentBottom="true">
		<Button android:layout_width="wrap_content"
			android:id="@+id/stock_mystock_kline_btn_kline" android:text=""
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:background="@drawable/stock_list"></Button>


		<Button android:layout_width="wrap_content" android:id="@+id/stock_mystock_kline_btn_hot"
			android:layout_toLeftOf="@+id/stock_mystock_kline_btn_keyboard"
			android:text="" android:layout_height="wrap_content"
			android:background="@drawable/stock_setup"></Button>
		<Button android:layout_width="wrap_content"
			android:id="@+id/stock_mystock_kline_btn_keyboard"
			android:layout_alignParentRight="true" android:text=""
			android:layout_height="wrap_content" android:background="@drawable/stock_keyboard"></Button>
	</RelativeLayout>
</RelativeLayout>
