<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/widget42"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/order_bg"
	>
<RelativeLayout
	android:id="@+id/buy_shoppingcar_productlist_title_layout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true">

<TextView
    android:id="@+id/buy_shoppingcar_productlist_title_txtview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="我的购物车" />

<Button
	android:id="@+id/order_pickup_productlist_jump_btn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="&#25910;&#34255;&#22841;"
	android:layout_alignParentTop="true"
	android:layout_alignParentRight="true" />
<Button
	android:id="@+id/back_btn"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="&#36820;&#22238;"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>



<LinearLayout
    android:id="@+id/buy_shoppingcar_productlist_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/buy_shoppingcar_productlist_title_layout"
    android:layout_above="@+id/buy_shoppingcar_productlist_totaloperate_layout"
    android:orientation="vertical"
    android:visibility="visible" >

    <ListView
        android:id="@+id/ProductShoppingcarStoreUp_isInShoppingCar_select_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    </ListView>
</LinearLayout>

<LinearLayout
    android:id="@+id/buy_shoppingcar_productlist_totaloperate_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true" >

    <CheckBox
        android:id="@+id/buy_shoppingcar_productlist_totaloperate_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ProductShoppingcarStoreUp_ProductId_isStoreUp_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏" />

    <Button
        android:id="@+id/ProductShoppingcarStoreUp_ProductId_isInShoppingCar_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/buy_shoppingcar_productlist_totaloperate_totalprice_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总价钱" />

        <TextView
            android:id="@+id/buy_shoppingcar_productlist_totaloperate_totalinteger_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总点数" />
    </LinearLayout>

    <Button
        android:id="@+id/buy_shoppingcar_productlist_totaloperate_gotopay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结算" />

</LinearLayout>

</RelativeLayout>
